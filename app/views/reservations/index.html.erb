<div class="container-fruid reservations">
  <h4 class="pb-4">予約済みルーム一覧</h4>
  <table>
    <thead>
      <tr align="center">
        <th>ルーム画像</th>
        <th>ルーム名</th>
        <th>ルーム紹介</th>
        <th>合計料金</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>予約確定日時</th>
        <th>キャンセル</th>
      </tr>
    </thead>
    <tbody>
      <% @reservations.each do |reservation| %>
        <tr>
          <td>
            <%= link_to image_tag(reservation.room.img.url, class: "reservations-image"), room_path(reservation.room_id) %>
          </td>
          <td class="posts-name"> 
            <%=link_to reservation.room.name, room_path(reservation.room_id)%>
          </td>
          <td class="posts-content">
            <%= reservation.room.context %>
          </td>
          <td class="price-icon">
            <%= reservation.total_amount %>
          </td>
          <td>
            <%= reservation.start_date.strftime("%Y年 %m月%d日") %>
          </td> 
          <td>
            <%= reservation.end_date.strftime("%Y年 %m月%d日") %>
          </td> 
          <td>
            <%= reservation.created_at.to_s(:datetime_jp) %>
          </td>
          <td>
            <%= link_to"キャンセル", reservation ,method: :delete,data:{confirm:"本当にキャンセルしてよろしいですか。"} %>
          </td> 
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
