<div class="container-fruid room-posts">
  <h4 class="pb-4">登録済みルーム一覧</h4>
  <table>
    <thead>
      <tr align="center">
        <th>ルーム画像</th>
        <th>ルーム名</th>
        <th>ルーム紹介</th>
        <th>料金</th>
        <th>作成日</th>
        <th>編集</th>
      </tr>
    </thead>
    <tbody>
      <% @rooms.each do |room| %>
        <tr>
          <td>
            <%= link_to image_tag(room.img.url, class: "room-posts-image"), room_path(room.id) %>
          </td>
          <td class="posts-name"> 
            <%=link_to room.name, room_path(room.id)%>
          </td>
          <td class="posts-content">
            <%= room.context %>
          </td>
          <td class="price-icon">
            <%= room.price %>
          </td>
          <td>
            <%= room.created_at.to_s(:datetime_jp) %>
          </td> 
          <td>
            <%= link_to"編集", edit_room_path(room.id) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
