<div class="notifications">
  <%= render "shared/error", obj:@room %>
</div>

<div class="container-fruid room-new">
  <div class="row">
    <div class="col-lg-10 room-view">
      <div class="room-view-box">
        <%= form_with model:@room do |f| %>
          <div class="update-content">
            <div class="row">
              <h5>ルーム情報編集</h5>
            </div>
          </div>
          <div class="update-content">
            <div class="row">
              <label for="name" class="col-md-3 required-a">
              ルーム名
              </label>
              <%=f.text_field :name, :class =>'form-control mb-4 col-md-9', placeholder: "ルーム名を入力" %>
            </div>
          </div>
          <div class="update-content">
            <div class="row">
              <label for="context" class="col-md-3 required-a">
              ルーム紹介
              </label>
              <%=f.text_area :context, :class =>'form-control mb-4 col-md-9', placeholder: "ルーム説明を入力" , rows: 5%>
            </div>
          </div>
          <div class="update-content">
            <div class="row">
              <label for="price" class="col-md-3 required-a">
              料金
              </label>
              <%=f.number_field :price, :class =>'form-control mb-4 col-md-9', placeholder: "1日あたりの料金を入力" %>
            </div>
          </div>
          <div class="update-content">
            <div class="row">
              <label for="address" class="col-md-3 required-a">
              住所
              </label>
              <%=f.text_field :address, :class =>'form-control mb-4 col-md-9', placeholder: "住所を入力" %>
            </div>
          </div>
          <div class="update-content">
            <div class="row">
              <label for="img" class="col-md-3 required-a">
              ルーム画像
              </label>
              <%=f.file_field :img, :class =>'form-control mb-4 col-md-9', placeholder: "ルーム画像をアップロード" %>
            </div>
          </div>
          <div class="update-content">
            <div class="row">
              <%= f.submit"更新", {class: 'col-md-2 btn btn-primary mx-3'} %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
