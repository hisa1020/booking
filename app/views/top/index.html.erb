<div class="top">
  <div class="top-main">
    <div class="container">
      <div class="row col-lg-6">
        <div class="form-fream">
          <div class="form-area">
            <p class="form-area-title mb-4">
            Potepan Shereでまだ体験したことのないような旅をしよう
            </p>
            <%= form_with url: search_rooms_path, method: :get, local: true do |f| %>
              <label>エリア</label>
              <%= f.text_field :area, value:@area, :class => "form-control mb-4",
              placeholder: "東京" %>
              <%= f.submit "探す", :class => "form-control btn-primary mb-4" %>
            <% end %>
          </div> 
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="panel-area m-5">
      <h1 class="section-title">
      おすすめのエリア
      </h1>
      <div class="row">
        <div class="panel-item col-lg-3 col-6">
          <span>東京</span>
          <%= link_to image_tag("/assets/img_tokyo.jpg", class: "panel-image"), search_rooms_path(:area=>"東京") %>
          <div class="shadow"></div>
        </div>
        <div class="panel-item col-lg-3 col-6">
          <span>京都</span>
          <%= link_to image_tag("/assets/img_kyoto.jpg", class: "panel-image"), search_rooms_path(:area=> "京都") %>
          <div class="shadow"></div>
        </div>
        <div class="panel-item col-lg-3 col-6">
          <span>福岡</span>
          <%= link_to image_tag("/assets/img_hukuoka.jpg", class: "panel-image"), search_rooms_path( :area=> "福岡") %>
          <div class="shadow"></div>
        </div>
        <div class="panel-item col-lg-3 col-6">
          <span>札幌</span>
          <%= link_to image_tag("/assets/img_sapporo.jpg", class: "panel-image"), search_rooms_path( :area=> "札幌") %>
          <div class="shadow"></div>
        </div>
      </div>
    </div>
  </div>
</div>
